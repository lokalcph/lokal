---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />
  <main>
    <h1>galleri <span class="unika_lodret">unika</span></h1>
    <div class="grid_galleri">
      <div class="grid">
        <div class="felt1">
          <div class="image-wrapper">
            <span class="image-title">Titel 1</span>
            <img src="/src/assets/mobilimg1.jpg" alt="" />
          </div>
        </div>
        <div class="felt2">
          <div class="image-wrapper">
            <span class="image-title">Titel 1</span>
            <img src="/src/assets/mobilimg2.png" alt="" />
          </div>
        </div>
        <div class="felt3">
          <div class="image-wrapper">
            <span class="image-title">Titel 1</span>
            <img src="/src/assets/mobilimg3.png" alt="" />
          </div>
        </div>
        <div class="felt4">
          <div class="scroll_produkt">
            <img src="/src/assets/mobilimg4.png" alt="placeholder" />
          </div>
          <div class="scroll_produkt">
            <img src="/src/assets/mobilimg4.png" alt="placeholder" />
          </div>
          <div class="scroll_produkt">
            <img src="/src/assets/mobilimg4.png" alt="placeholder" />
          </div>
          <div class="scroll_produkt">
            <img src="/src/assets/mobilimg4.png" alt="placeholder" />
          </div>
          <div class="scroll_produkt">
            <img src="/src/assets/mobilimg4.png" alt="placeholder" />
          </div>
        </div>
        <div class="img_grid2">
          <div class="felt5">
            <img src="/src/assets/mobilimg5.png" alt="" />
          </div>
          <div class="felt6">
            <img src="/src/assets/mobilimg6.png" alt="" />
          </div>
        </div>

        <div class="felt7"><img src="/src/assets/mobilimg7.png" alt="" /></div>
        <div class="felt8"><img src="/src/assets/mobilimg8.png" alt="" /></div>

        <div class="felt9"><img src="/src/assets/mobilimg9.png" alt="" /></div>
        <div class="felt10">
          <img src="/src/assets/mobilimg10.png" alt="" />
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <style>
    /* GALLERI GRID */
    html {
      scroll-behavior: smooth;
      background-color: var(--bg);
    }
    main {
      padding-top: 1rem;
    }
    h1 {
      color: var(--Red, #a6192e);
      font-family: "Futura", sans-serif;
      font-size: 4.5625rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      margin-top: 6rem;
    }
    .unika_lodret {
      font-family: "Gabriela", serif;
      font-size: 1.4rem;
      color: var(--Red, #a6192e);
      writing-mode: vertical-rl;
      transform: rotate(180deg);
      margin-bottom: 0.5rem;
      font-weight: 200;
    }
    /* BILLEDER I GRIDET */
    /* gør at alle billeder fylder hele feltet i gridet */
    .grid img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-auto-rows: auto;
    }

    .felt1 {
      border-top: 1px solid black;
      grid-column: 1/-1;
    }
    .felt2 {
      border-right: 1px solid black;
    }

    .felt4 {
      overflow-x: auto;
      display: flex;
      grid-column: 1/-1;
    }
    .scroll_produkt {
      min-width: 40%;
      flex-shrink: 0;
    }

    .img_grid2 {
      display: grid;
      grid-template-columns: 1fr 2fr; /* Venstre kolonne: 1 del, højre: 2 dele */
      grid-column: 1/-1;
      grid-auto-rows: auto;
    }
    .felt5 {
      grid-column: 1;
      border-right: 1px solid black;
    }
    .felt6 {
      grid-column: 2;
    }
    .felt9 {
      border-right: 1px solid black;
    }
    .felt1,
    .felt2,
    .felt3,
    .felt4,
    .felt5,
    .felt6,
    .felt7,
    .felt8,
    .felt9,
    .felt10 {
      border-bottom: 1px solid black;
    }
    .image-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
    }

    .image-title {
      position: absolute;
      top: 8px;
      left: 8px;
      background-color: rgba(255, 255, 255, 0.7); /* baggrund for læsbarhed */
      padding: 4px 8px;
      font-size: 0.75rem;
      font-family: "Futura", sans-serif;
      color: black;
      z-index: 10;
      border-radius: 4px;
    }
  </style>
</Layout>
