---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />
  <main>
    <section class="hero">
      <video
        class="hero_logo"
        autoplay
        muted
        playsinline
        onended="this.pause(); this.currentTime = this.duration - 0.01;"
      >
        <source src="/src/assets/logo.mp4" type="video/mp4" />
      </video>
      <div class="hero_text">
        <h1 class="lokal">lokal</h1>
        <span class="cph">cph</span>
      </div>
    </section>
    <section class="info">
      <div class="info_text">
        <h2>se menu</h2>
        <div class="line"></div>
        <div class="line"></div>
        <p>åben mandag til fredag 8.00 - 16.00</p>
        <p>lørdag 9.00 - 15.00</p>
        <div class="line"></div>
        <p>book os til dit private arrangement</p>
        <a href="kontakt.astro">læs mere her</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* HERO */

  .hero {
    background-color: var(--bg);
    padding: 1rem;
  }

  .hero-layer {
    display: grid;
    place-items: center;
    position: relative;
  }

  .hero_logo {
    width: 100%;
    height: auto;
    grid-area: 1 / 1;
    z-index: 0;
    margin-top: 9rem;
  }

  .hero_text {
    grid-area: 1 / 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: center;
    gap: 0.25rem;
    z-index: 1;
  }

  .lokal {
    font-family: "Futura", sans-serif;
    color: var(--accent);
    font-size: 9.375rem;
    font-weight: 500;
    line-height: 1;
    margin: 0;
  }

  .cph {
    font-family: "Gabriela", serif;
    font-size: 1.875rem;
    color: var(--accent);
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-bottom: 0.5rem;
  }

  /* INFO */

  .info {
    background-color: var(--bg);
  }

  .info_text {
    display: flex;
    flex-direction: column;
    align-items: right;
    justify-content: right;
    text-align: right;
    padding: 0.5rem 1rem;
    gap: 0.5rem;
  }

  .line {
    border-top: 1px solid var(--accent);
    margin: 20px 0;
    padding: -1rem;
  }
  h2 {
    font-family: "Futura", sans-serif;
    color: var(--black);
    font-size: 3.125rem;
    line-height: 1;
    margin: 0;
  }

  p {
    font-family: "Futura", sans-serif;
    color: var(--black);
    font-size: 0.9375rem;
    line-height: 1.2;
    margin: 0;
  }
  a {
    font-family: "Futura", sans-serif;
    color: var(--black);
    font-size: 0.9375rem;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
    color: var(--accent);
  }
</style>
