---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />
  <main>
    <section class="hero">
      <video
        class="hero_logo"
        autoplay
        muted
        playsinline
        onended="this.pause(); this.currentTime = this.duration - 0.01;"
      >
        <source src="/src/assets/logo.mp4" type="video/mp4" />
      </video>
      <div class="hero_text">
        <h1 class="lokal">lokal</h1>
        <span class="cph">cph</span>
      </div>
    </section>
    <section class="info">
      <div class="info_text">
        <h2 class="se_menu">se menu</h2>
        <div class="line"></div>
        <div class="line" id="longer"></div>
        <p>åben mandag til fredag 8.00 - 16.00</p>
        <p>lørdag 9.00 - 15.00</p>
        <div class="line"></div>
        <p>book os til dit private arrangement</p>
        <a href="kontakt.astro">læs mere her</a>
      </div>
      <img
        src="src/assets/lokal_index.png"
        alt="billede af en kop kaffe på et bord på lokal"
        class="info_img"
      />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* HERO */

  .hero {
    background-color: var(--bg);
    padding: 1rem;
  }

  .hero-layer {
    display: grid;
    place-items: center;
    position: relative;
  }

  .hero_logo {
    width: 100%;
    height: auto;
    grid-area: 1 / 1;
    z-index: 0;
    margin-top: 9rem;
  }

  .hero_text {
    grid-area: 1 / 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: center;
    gap: 0.25rem;
    z-index: 1;
  }

  .lokal {
    font-family: "Futura", sans-serif;
    color: var(--accent);
    font-size: 9.375rem;
    font-weight: 700;
    line-height: 1;
    margin: 0;
  }

  .cph {
    font-family: "Gabriela", serif;
    font-size: 1.875rem;
    color: var(--accent);
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-bottom: 0.5rem;
  }

  /* INFO */

  .info {
    background-color: var(--bg);
  }

  .info_text {
    display: flex;
    flex-direction: column;
    align-items: right;
    justify-content: right;
    text-align: right;
    gap: 0.5rem;
  }

  .line {
    border-top: 2px solid var(--accent);
    margin: 0.5rem 0 0.5rem 9.5rem;
  }

  #longer {
    margin: 20px 0 20px 60px;
  }

  h2 {
    font-family: "Futura", sans-serif;
    font-weight: 500;
    color: var(--black);
    font-size: 3.5rem;
    line-height: 1;
    margin: 0;
    padding: 0 0.5rem;
  }

  h2:hover {
    color: var(--bg);
    -webkit-text-stroke: 1px var(--black);
  }

  p {
    font-family: "Futura", sans-serif;
    color: var(--black);
    font-size: 0.9375rem;
    line-height: 1.2;
    margin: 0;
    padding-right: 0.5rem;
  }
  a {
    font-family: "Futura", sans-serif;
    color: var(--black);
    font-size: 0.9375rem;
    text-decoration: none;
    padding-right: 0.5rem;
  }

  a:hover {
    text-decoration: underline;
    color: var(--accent);
  }

  /* IMG */

  .info_img {
    width: 100%;
    max-width: 300px;
    height: auto;
    object-fit: cover;
    align-self: flex-start;
  }

  /* MEDIA QUERIES */

  @media screen and (min-width: 850px) {
    .hero_text {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .lokal {
      font-size: 6.25rem;
    }

    .cph {
      font-size: 1.875rem;
    }

    .info_img {
      width: 50%;
      max-width: 600px;
      height: auto;
      margin-right: 2rem;
      align-self: flex-start;
    }
  }
</style>
